<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/common_header">

        <ListPreference
            app:key="@string/real_currency_key"
            app:title="@string/currency_title"
            app:entries="@array/currency_entries"
            app:entryValues="@array/currency_entries"/>

        <EditTextPreference
            app:key="days"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="3"
            app:title="@string/days_title" />

    </PreferenceCategory>

</PreferenceScreen>